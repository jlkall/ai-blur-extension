{
  "manifest_version": 3,
  "name": "CloseAI",
  "version": "0.4.0",
  "description": "Detects and blurs AI-generated text and images using advanced ML models. Shows confidence ratings.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "CloseAI"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["ml/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
          "js": [
            "preRenderBlocker.js",
            "ml/onnxLoader.js",
            "ml/ort.min.js",
            "ml/detector.js",
            "ml/enhancedDetector.js",
            "ml/optimizedDetector.js",
            "ml/imageDetector.js",
            "ml/enhancedImageDetector.js",
            "ml/optimizedImageDetector.js",
            "signals.js",
            "scorer.js",
            "googleSearch.js",
            "gameMode.js",
            "detectionHistory.js",
            "export.js",
            "analytics.js",
            "content.js"
          ],
      "run_at": "document_start"
    }
  ]
}
